<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="title">Photoclone</h1>
    <nav class="menu">
      <ul>
        <li class="col-md-4"><%= link_to "New Post", new_post_path(@post) %></li>
        <li class="col-md-4">Sign out</li>
      </ul>
    </nav>
<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.caption %></td>
        <td><%= post.image %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
